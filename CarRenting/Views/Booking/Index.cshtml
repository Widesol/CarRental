@model CarRenting.Models.BookingACarVm

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BookCar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Booking.BookingTime" class="control-label"></label>
                <input asp-for="Booking.BookingTime" class="form-control" />
                <span asp-validation-for="Booking.BookingTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.CarModel" class="control-label"></label>
                <select asp-for="Car.CarModel" asp-items="Model.CarModels" class="form-control">
                    <option disabled selected>--- Car model ---</option>
                </select>
                <span asp-validation-for="Car.CarModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.RegNumber" class="control-label"></label>
                <input asp-for="Car.RegNumber" class="form-control" />
                <span asp-validation-for="Car.RegNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.PersonNumber" class="control-label"></label>
                <input asp-for="Customer.PersonNumber" class="form-control" />
                <span asp-validation-for="Customer.PersonNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
